{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "gdb",
      "request": "attach",
      "name": "Wokwi Debug",
      "executable": "${workspaceFolder}/target/xtensa-{{ mcu }}-none-elf/debug/{{ crate_name }}",
      "target": "localhost:9333",
      "remote": true,
      "gdbpath": "/home/${input:user}/.espressif/tools/xtensa-{{ mcu }}-elf/esp-2021r2-patch5/xtensa-{{ mcu }}-elf/bin/xtensa-{{ mcu }}-elf-gdb",
      "cwd": "${workspaceRoot}",
      "stopAtConnect": true,
      "valuesFormatting": "parseText"
    }
  ],
  "inputs": [
    {
      "type": "pickString",
      "id": "user",
      "description": "Select the user: esp for VsCode and Codespaces and gitpod for Gitpod:",
      "options": [
        "esp",
        "gitpod"
      ],
      "default": "esp"
    }
  ]
}
