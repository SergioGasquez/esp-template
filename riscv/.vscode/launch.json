{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Wokwi GDB",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/target/riscv32imac-unknown-none-elf/debug/{{ crate_name }}",
      "cwd": "${workspaceFolder}",
      "MIMode": "gdb",
      "miDebuggerPath": "/home/${input:user}/.espressif/tools/riscv32-esp-elf/esp-2021r2-patch5/riscv32-esp-elf/bin/riscv32-esp-elf-gdb",
      "miDebuggerServerAddress": "localhost:3333",
      "stopAtConnect": true,
    }
  ],
  "inputs": [
    {
      "type": "pickString",
      "id": "user",
      "description": "Select the user: esp for VsCode and Codespaces and gitpod for Gitpod:",
      "options": [
        "esp",
        "gitpod"
      ],
      "default": "esp"
    }
  ]
}
